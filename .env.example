# ============================================
# Yad2 Monitor - Environment Variables
# ============================================

# Required - Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Yad2 Search URL (optional - can add multiple via API)
YAD2_URL=https://www.yad2.co.il/realestate/rent?topArea=41&area=12&city=8400

# Scraping Intervals (minutes)
MIN_INTERVAL_MINUTES=60
MAX_INTERVAL_MINUTES=90

# Web Dashboard
ENABLE_WEB=true
WEB_PORT=5000

# Proxy Configuration (optional)
# Format: ip:port,ip:port:user:pass
PROXY_LIST=
# Or single proxy:
HTTP_PROXY=
HTTPS_PROXY=
